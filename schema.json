{
    "$schema": "http://json-schema.org/schema#",
    "anyOf": [
        {
            "title" : "Flights",
            "description" : "Used to validate flight booking sent to server",
            "type": "object",
            "properties": {
                "bookingDate": {
                    "type": "string",
                    "minLength": 10
                },
                "userId": {
                    "type": "number",
                    "minimum": 1
                },
                "flightNo": {
                    "type": "string",
                    "maxLength": 6
                },
                "deptDate": {
                    "type": "string",
                    "minLength": 10
                },
                "travelClass": {
                    "type": "string",
                    "maxLength": 15
                },
                "fTicketQty": {
                    "type": "number"
                },
                "fTicketPrice": {
                    "type": "number"
                },
                "journey": {
                    "type": "string",
                    "maxLength": 10
                }
            },
            "required": ["bookingDate", "userId", "flightNo", "deptDate", "travelClass", "fTicketQty", "fTicketPrice", "journey"]
        }, 
        {
            "title" : "Hotel",
            "description" : "Used to validate hotel booking sent to server",
            "type": "object",
            "properties": {
                "bookingDate": {
                    "type": "string",
                    "minLength": 10
                },
                "userId": {
                    "type": "number",
                    "minimum": 1
                },
                "hotelId": {
                    "type": "string",
                    "maxLength": 6
                },
                "checkIn": {
                    "type": "string",
                    "minLength": 10
                },
                "checkOut": {
                    "type": "string",
                    "maxLength": 10
                },
                "nights": {
                    "type": "number",
                    "maximum": 100
                },
                "rooms": {
                    "type": "number",
                    "maximum": 20
                },
                "totalPrice": {
                    "type": "number"
                }

            },
            "required": ["bookingDate", "userId", "hotelId", "checkIn", "checkOut", "nights", "rooms", "totalPrice"]
        },
        {
            "title" : "Activity",
            "description" : "Used to validate activity booking sent to server",
            "type": "object",
            "properties": {
                "bookingDate": {
                    "type": "string",
                    "minLength": 10
                },
                "userId": {
                    "type": "number",
                    "minimum": 1
                },
                "activityID": {
                    "type": "string",
                    "maxLength": 10
                },
                "activityDate": {
                    "type": "string",
                    "minLength": 10
                },
                "aTickets": {
                    "type": "number",
                    "minimum": 100
                },
                "totalPrice": {
                    "type": "number"
                },
                "bookingStatus": {
                    "type": "string"
                },
                "booking": {
                    "type": "string"
                }
            },
            "required": ["bookingDate", "userId", "activityID", "aTickets", "totalPrice", "booking"]
        }

    ]
    
}